# accesos genericos a mongo
MONGO_DB_HOST=localhost
MONGO_DB_PORT=27017
MONGO_DB_USER=root
MONGO_DB_PASSWORD=password
MONGO_DB_NAME_INVENTORY=inventory # nombre de la base de datos para el microservicio de inventario
MONGO_DB_NAME_STORAGE=storage # nombre de la base de datos para el microservicio de almacenamiento
